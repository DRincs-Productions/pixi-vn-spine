{
  "name": "@drincs/pixi-vn-spine",
  "description": "Spine 2D integration for Pixi'VN",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:post": "node scripts/replace-pixi.js",
    "build:submodules": "tsup --config tsup.submodules.config.ts",
    "build:index": "tsup --config tsup.config.ts",
    "build": "npm run build:submodules && npm run build:index && npm run build:post",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs",
      "default": "./dist/core.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "core": [
        "./dist/core.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRincs-Productions/pixi-vn-spine.git"
  },
  "author": "DRincs-Productions",
  "license": "LGPL-2.1",
  "bugs": {
    "url": "https://github.com/DRincs-Productions/pixi-vn-spine/issues"
  },
  "homepage": "https://pixi-vn.web.app/start/canvas-spine2d",
  "funding": "https://github.com/DRincs-Productions/pixi-vn?sponsor=1",
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "jsdom": "^27.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@drincs/pixi-vn": ">=1.3.36",
    "pixi.js": ">=8.0.0"
  },
  "keywords": [
    "game",
    "js",
    "novel",
    "pixi",
    "pixi-vn",
    "visual",
    "visual-novel"
  ],
  "dependencies": {
    "vitest": "^3.2.4",
    "@esotericsoftware/spine-pixi-v8": "^4.2.96"
  }
}
